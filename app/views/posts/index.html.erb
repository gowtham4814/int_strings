<p id="notice"><%= notice %></p>
<div class="container-fluid mr-4">
<h1>Posts</h1>

  <table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Topic</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody><% i=0 %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= @topic.name %></td>
        <td><%= link_to 'Show', topic_post_path(@topic, post), class: "btn btn-secondary" %></td><% if can? :update, post %>
        <td><%= link_to 'Edit', edit_topic_post_path(@topic, post), class: "btn btn-primary" %></td><% else %><td></td><% end %> <% if can? :destroy, post %>
        <td><%= link_to 'Destroy', topic_post_path(@topic, post), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td> <% else %><td></td> <% end %>
          <td><h6> <% if @status[i] == 'Read'%>
              <em style="color: blueviolet">READ</em>
            <%else%>
              <em style="color: blue">UNREAD</em>
            <% end %>
          </h6></td>
          <%i+=1 %>
    </tr>
    <% end %>
  </tbody>
  </table>


<br>

<%= link_to 'New Post', new_topic_post_path, class: "btn btn-secondary" %>    <%= link_to 'Back', topics_path, class: "btn btn-secondary" %></div>
