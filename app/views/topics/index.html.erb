<p id="notice"><%= notice %></p>
<div class="container-fluid mr-4">
<h1>Topics</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.description %></td>
        <td><%= link_to 'Show', topic , class: "btn btn-secondary"%></td>
        <td><%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
        <td><%= link_to "#{topic.name} posts", topic_posts_path(topic), class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-secondary" %>
<%= link_to 'All Posts', all_post_path, class: "btn btn-secondary" %></div>
